# =============================================================================
# DEX Mobile v6 - Production Environment Configuration
# =============================================================================

# Environment
NODE_ENV=production
ENVIRONMENT=production

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=your_aws_account_id

# Domain Configuration
DOMAIN_NAME=dex-mobile.com
API_BASE_URL=https://api.dex-mobile.com
WEBSOCKET_URL=wss://ws.dex-mobile.com

# Database Configuration (RDS PostgreSQL)
DB_HOST=your_rds_endpoint
DB_PORT=5432
DB_NAME=dex_mobile
DB_USER=postgres
DB_PASSWORD=your_secure_db_password
DATABASE_URL=postgresql://postgres:your_secure_db_password@your_rds_endpoint:5432/dex_mobile
POSTGRES_URL=postgresql://postgres:your_secure_db_password@your_rds_endpoint:5432/dex_mobile

# Redis Configuration (ElastiCache)
REDIS_HOST=your_elasticache_endpoint
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_auth_token
REDIS_URL=redis://your_elasticache_endpoint:6379
REDIS_AUTH_TOKEN=your_redis_auth_token

# Security Configuration
JWT_SECRET=your_jwt_secret_key_64_chars_minimum
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key
MFA_SECRET_KEY=your_mfa_secret_key

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Uniswap V3 Configuration
UNISWAP_V3_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3
UNISWAP_V3_FACTORY_ADDRESS=0x1F98431c8aD98523631AE4a59f267346ea31F984
UNISWAP_V3_ROUTER_ADDRESS=0xE592427A0AEce92De3Edee1F18E0157C05861564

# External API Keys
COINGECKO_API_KEY=your_coingecko_api_key
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# KYC/AML Provider Configuration
SIGNZY_API_KEY=your_signzy_api_key
SIGNZY_BASE_URL=https://preproduction.signzy.tech/api/v2
UQUDO_API_KEY=your_uqudo_api_key
UQUDO_BASE_URL=https://api.uqudo.io/v1
NSDL_API_KEY=your_nsdl_api_key
NSDL_BASE_URL=https://api.nsdl.co.in

# Payment Gateway Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_BASE_URL=https://api.paypal.com
PHONEPE_MERCHANT_ID=your_phonepe_merchant_id
PHONEPE_API_KEY=your_phonepe_api_key
PHONEPE_BASE_URL=https://api.phonepe.com/apis/hermes

# S3 Storage Configuration
S3_ASSETS_BUCKET=dex-mobile-v6-app-assets
S3_KYC_BUCKET=dex-mobile-v6-kyc-documents
S3_REGION=ap-south-1

# Monitoring and Alerting
ALERT_EMAIL=admin@techvitta.com
SLACK_WEBHOOK_URL=your_slack_webhook_url
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
STRICT_RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://dex-mobile.com,https://app.dex-mobile.com,https://admin.dex-mobile.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Service Ports (for local development)
BLOCKCHAIN_SERVICE_PORT=5001
TRADING_SERVICE_PORT=5002
POOL_SERVICE_PORT=5003
QUOTE_SERVICE_PORT=5004
WALLET_SERVICE_PORT=5005
AUTH_SERVICE_PORT=5006
SECURITY_SERVICE_PORT=5007
PAYPAL_SERVICE_PORT=5008
PHONEPE_SERVICE_PORT=5009
TDS_SERVICE_PORT=5010
FIAT_WALLET_SERVICE_PORT=5011
REALTIME_SERVICE_PORT=5012
ANALYTICS_SERVICE_PORT=5013
NOTIFICATION_SERVICE_PORT=5014

# TDS Compliance Configuration
TDS_RATE_CRYPTO=1.0
TDS_RATE_FIAT=0.1
TDS_THRESHOLD_AMOUNT=50000
TDS_REPORTING_ENABLED=true

# Compliance Configuration
KYC_REQUIRED=true
AML_SCREENING_ENABLED=true
TRANSACTION_MONITORING_ENABLED=true
SUSPICIOUS_ACTIVITY_THRESHOLD=100000

# Feature Flags
ENABLE_UNISWAP_V3=true
ENABLE_CROSS_CHAIN=true
ENABLE_FIAT_ONRAMP=true
ENABLE_ADVANCED_TRADING=true
ENABLE_AI_ANALYTICS=true
ENABLE_SOCIAL_TRADING=false

# Performance Configuration
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_MS=30000
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_VALIDATION=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_SAMPLING_RATE=0.1
ENABLE_PERFORMANCE_MONITORING=true

# Mobile App Configuration
MOBILE_APP_VERSION=6.0.1
MOBILE_FORCE_UPDATE=false
MOBILE_MIN_VERSION=6.0.0

# API Versioning
API_VERSION=v1
ENABLE_API_VERSIONING=true
DEPRECATED_API_WARNING=true
