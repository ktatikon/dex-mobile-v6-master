{
  "name": "monitoring-service",
  "version": "1.0.0",
  "description": "Health monitoring and metrics collection service for DEX Mobile v6",
  "main": "health-check.js",
  "scripts": {
    "start": "node health-check.js",
    "dev": "nodemon health-check.js",
    "build": "npm run validate && echo 'Monitoring Service build completed successfully'",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "node -c health-check.js",
    "health": "curl -f http://localhost:3001/health || exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "prometheus-client": "^1.0.0",
    "prom-client": "^15.0.0",
    "express-prometheus-middleware": "^1.2.0",
    "ioredis": "^5.3.2",
    "uuid": "^9.0.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0"
  },
  "keywords": [
    "monitoring",
    "health-check",
    "metrics",
    "prometheus",
    "observability",
    "microservices"
  ],
  "author": "DEX Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ktatikon/dex-mobile-v6-master.git"
  },
  "bugs": {
    "url": "https://github.com/ktatikon/dex-mobile-v6-master/issues"
  },
  "homepage": "https://github.com/ktatikon/dex-mobile-v6-master#readme"
}
